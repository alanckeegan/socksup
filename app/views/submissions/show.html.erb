
<h1>Here are your responses!</h1>

<% @submission.responses.each do |r| %>

<h3><%= r.question.question %></h3>
<h3><%= r.content %></h3>

<% end %>

<%= button_to "Submit", submit_path(@submission), method: :patch, class: "btn btn-success socksup-primary", id: "submit-button", remote: :true, "data-toggle" => "modal", "data-target" => "#confirmSubmission" %>


<div class="modal fade" id="confirmSubmission" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5  id="exampleModalCenterTitle">Congratulations!</h5>
      </div>
      <div class="modal-body">
        <%= "You've successfully submitted your quiz to be a #{@submission.listing.title.downcase}.\n #{@submission.listing.employer.name} will review your application and their contact details will be available to you if your application is approved." %>
      </div>
      <div>
        <div class="modal-footer ">
          <div class="modal-button">
            <%= link_to 'Look for More Jobs', listings_path, class: "btn btn-success socksup-primary" %>
          </div>
          <div class="modal-button">
            <%= link_to 'See My Applications', user_path(@submission.user), class: "btn btn-success socksup-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


