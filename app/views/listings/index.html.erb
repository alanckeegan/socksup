<div class="container">

        <%= simple_form_for :query, :url => listings_path, method: "get" do |f| %>
      <div class="search-bar">
        <div class="row">
          <div class="col-xs-5">
          <%= f.input :city, as: :string, required: true, placeholder:'Location', label: false, input_html: {value: params[:query][:city], class: 'form-input'} %>
          </div>
          <div class="col-xs-5">
          <%= f.input :title, as: :string, required: true, placeholder:'Job Type', label: false, input_html: {value: params[:query][:title], class: 'form-input'} %>
          </div>
          <div class="col-xs-2">
            <%= f.button :submit, "Filter", class: "btn btn-success socksup-secondary" %>
          </div>
        </div>
      </div>
      <% end %>

  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= link_to listing_path(listing) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= listing.photo %>');">
              <div class="card-content">
                <div class="info">
                    <h2 class="card-title"><%= listing.title %></h2>
                    <h3 class="card-location"><%= listing.employer.city %></h3>
                    <p class="card-description"><%= listing.employer.name %></p>
                </div>
              </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

