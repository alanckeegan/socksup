<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="centering-text">
        <h2>Register as Business</h2>
      </div>
      <%= simple_form_for @employer do |f| %>
      <div class="form-box">
        <div class="form-inputs">
          <%= f.input :name,  as: :string, required: true, placeholder:'Business name', input_html: { class: 'form-input'} %>
          <%= f.input :description, required: true, placeholder:'Description of your business', input_html: { class: 'form-input'} %>
          <%= f.input :city,  as: :string, required: true, placeholder:'City', input_html: { class: 'form-input'} %>
          <%= f.input :address,  as: :string, required: true, placeholder:'Street Address', input_html: { class: 'form-input'} %>
          <%= f.input :contact,  as: :string, required: true, placeholder:'Business e-mail', input_html: { class: 'form-input'} %>
          <%= f.input :photo, required: true %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>
        <%= f.submit "Create Business", class: "btn btn-success socksup-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
